{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"allOf": [
		{
			"$ref": "../description.json"
		},
		{
			"$ref": "../../project/experimentalGameplay/upcomingCreatorFeatures.json",
			"then": {
				"type": "object",
				"properties": {
					"aliases": {
						"title": "Aliases",
						"type": "object",
						"patternProperties": {
							".*": {
								"$ref": "/data/packages/minecraftBedrock/schema/entity/dynamic/currentContext/propertyForAlias.json"
							}
						}
					},
					"properties": {
						"title": "Properties",
						"type": "object",
						"patternProperties": {
							".*": {
								"type": "object",
								"required": ["type"],
								"properties": {
									"type": {
										"title": "Type",
										"type": "string",
										"enum": ["int", "float", "bool", "enum"]
									},
									"range": {
										"title": "Range",
										"type": "array",
										"items": {
											"type": [
												"string",
												"number",
												"boolean",
												"integer"
											]
										}
									},
									"default": {
										"title": "Default",
										"type": [
											"string",
											"number",
											"boolean",
											"integer"
										]
									},
									"client_sync": {
										"title": "Client Sync",
										"type": "boolean"
									}
								}
							}
						}
					}
				}
			}
		}
	]
}
